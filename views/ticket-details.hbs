<div class="container" style="color: black;">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center mb-5">
        <div class="d-flex justify-content-center mb-3">
          <div id="qrcode">
            <img src="{{ticket.qr}}" alt="QR code">
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="">
        {{#if event}}

        <div class="d-flex justify-content-between">
          <a href="/events/{{event.id}}">
            <h2>{{event.name}}</h2>
          </a>
          {{#if manageable}}
          <div class="">
            <a href="/tickets/{{ticket.id}}/edit" class="btn btn-primary btn-block">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
          </div>
          {{/if}}
        </div>

        <div class="mt-2 text-secondery">
          <i class="fa fa-calendar-check-o text-primary" aria-hidden="true" style="width: 20px;"></i>
          <span class="fw-lighter ">{{formatDate event.startTime 'HH:mm, MMM Do YYYY'}}</span>
        </div>
        <div class="mt-2">
          <i class="fa fa-map-marker text-primary " aria-hidden="true" style="width: 20px;"></i>
          <span class="fw-lighter">{{event.location}}</span>
        </div>
        {{/if}}
      </div>
      <div class="">
        {{#if ticket}}
        <div class="mt-2">
          <i class="fa fa-envelope text-primary " aria-hidden="true" style="width: 20px;"></i>
          <span class="fw-lighter">{{ticket.email}}</span>
        </div>
        <div class="mt-2">
          <i class="fa fa-qrcode text-primary " aria-hidden="true" style="width: 20px;"></i>
          <span class="fw-lighter">{{ticket.id}}</span>
        </div>
        <div class="mt-2">
          <i class="fa fa-check-square-o text-primary" aria-hidden="true" aria-hidden="true" style="width: 20px;"></i>
          <span class="status status-{{ticket.status}}">{{ticket.status}}</span>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>